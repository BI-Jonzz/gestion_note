{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(form) }}
    <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
        {{ form_widget(form.prenom, {'attr': {'placeholder': 'prenom'}}) }}
        <span class="error">{{ form_errors(form.prenom) }}</span>
    </div>
    <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
        {{ form_widget(form.nom, {'attr': {'placeholder': 'nom'}}) }}
        <span class="error">{{ form_errors(form.nom) }}</span>
    </div>
    <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
        {{ form_widget(form.tel, {'attr': {'placeholder': 'tel'}}) }}
        <span class="error">{{ form_errors(form.tel) }}</span>
    </div>
    <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
        {{ form_widget(form.login, {'attr': {'placeholder': 'Login'}}) }}
        <span class="error">{{ form_errors(form.login) }}</span>
    </div>
    <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
        {{ form_widget(form.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
        <span class="error">{{ form_errors(form.plainPassword) }}</span>
    </div>
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

{% endblock %}