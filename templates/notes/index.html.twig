{% extends 'base.html.twig' %}

{% block title %}Notes index{% endblock %}

{% block body %}
    <h1>Notes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Note</th>
                <th>Commentaire</th>
                <th>Matière</th>
                <th>Professeur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.note }}</td>
                <td>{{ note.commentaire }}</td>
                <td>{% if note.matiereId %}{{ note.matiereId }} {% endif %}</td>
                <td>{% if note.professeurId %}{{ note.professeurId }} {% endif %}</td>

                <td>
                    <a href="{{ path('notes_show', {'id': note.id}) }}">show</a>
                    <a href="{{ path('notes_edit', {'id': note.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucune donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('notes_new') }}">nouvelle</a>
{% endblock %}
